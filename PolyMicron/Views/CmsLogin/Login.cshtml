@model LoginModel
@{
    Layout = "CmsLayout";
    ViewData["HideNavbar"] = true;
}

<div class="container">
    <div class="columns">
        <div class="column is-one-quarter"></div>

        <form class="column is-half" method="POST" asp-controller="CmsLogin" asp-action="PostLogin">
            <div class="field">
                <label class="label">Username</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Username" asp-for="Username" />
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="password" placeholder="Password" asp-for="Password" />
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <button class="button is-primary is-fullwidth" type="submit" data-loader="1">
                        Sign in
                    </button>
                </div>
            </div>
            <message-boxes />
        </form>
        
    </div>
</div>